# Example environment variables for Cloud Run deployment
# Copy this to .env.yaml and fill in your values

env_variables:
  # Google Cloud Configuration
  GCP_PROJECT_ID: "your-project-id"
  FIRESTORE_DATABASE_ID: "(default)"  # or your custom database ID
  
  # Storage Configuration
  GCS_BUCKET_NAME: "your-bucket-name"
  STORAGE_BUCKET_NAME: "your-bucket-name"
  STORAGE_UPLOAD_PATH: "pending"
  
  # BigQuery Configuration
  USE_BIGQUERY_FOR_INVOICES: "true"
  BIGQUERY_DATASET: "recon_summary"
  BIGQUERY_TABLE_INVOICE_REVIEW: "invoice_review"
  
  # Optional: Override BigQuery query
  # BIGQUERY_QUERY_INVOICE_SUMMARIES: "SELECT ..."
  
  # Application Configuration
  NODE_ENV: "production"
  
  # Server Configuration (Cloud Run sets PORT automatically)
  # PORT: "8080"
  
  # Optional: API Configuration
  # API_TIMEOUT: "30000"
  # API_RETRY_ATTEMPTS: "3"